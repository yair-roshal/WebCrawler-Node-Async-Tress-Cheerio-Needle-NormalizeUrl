{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"no-var": "error",
		"no-mixed-spaces-and-tabs": "off",
		// "semi": "error",
		// "no-multi-spaces": "error",
		// "space-in-parens": "error",
		// "no-multiple-empty-lines": "error",
		// "prefer-const": "error",
		// "no-use-before-define": "error",

		// "no-unused-vars": "warn"
		"no-unused-vars": "off"
	}
}
